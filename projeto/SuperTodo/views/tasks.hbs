<!DOCTYPE html>
<HTML>

<HEAD>
  <TITLE>
    Tasks
  </TITLE>
</HEAD>

<BODY>
  <form action="/tasks" method="POST">
    <input type="text" name="createTitle" ><br>
    <input type="text" name="createDescription" ><br><br>
    <select name="createStatus">
      <option value="TODO">Por fazer</option>
      <option value="DONE">Concluida</option>
    </select>
    <input type="submit" value="Submit" name="createTaskButton">
  </form>

  <div id="tasks">
    <ul>
      {{#each tasks}} 
        <form action="/deleteTask" method="POST">
            <li>{{title}} {{description}} {{status}}</li> 
            <input type="submit" value="Delete" name="deleteTaskButton{{@index}}">
            <input type="hidden" name="title" value="{{title}}">     
            <input type="hidden" name="description" value="{{description}}">  
            <input type="hidden" name="status" value="{{status}}">      
        </form>            
      {{/each}}
    </ul>
  </div>

</BODY>

</HTML>